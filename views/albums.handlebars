<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <!-- Album Card -->
  {{#each albums as |album| }}
    <div class="bg-white overflow-hidden shadow-md rounded-lg">
      <a href="{{album.data.uri}}">
        <img class="w-full h-56 object-cover" src="{{album.data.coverArt.sources.[0].url}}" alt="Album Cover" />
        <div class="p-4">
          <h2 class="text-xl font-bold text-gray-800">{{album.data.name}}</h2>
          <p class="text-gray-600">
            {{#each album.data.artists.items  as |artist| }}
              <a href="{{artist.uri}}">{{artist.profile.name}}</a>
            {{/each}}
          </p>
        </div>
      </a>
    </div>
  {{/each }}
  <!-- Comment form -->
  <div class="mt-4">
    <form id="comment-form">
      <div class="mb-4">
        <label class="block font-bold mb-2" for="name">Name</label>
        <input
          class="w-full px-3 py-2 leading-tight border border-gray-400 rounded shadow appearance-none focus:outline-none focus:shadow-outline"
          id="name" type="text" name="name" placeholder="Your name" required>
      </div>
      <div class="mb-4">
        <label class="block font-bold mb-2" for="comment">Comment</label>
        <textarea
          class="w-full px-3 py-2 leading-tight border border-gray-400 rounded shadow appearance-none focus:outline-none focus:shadow-outline"
          id="comment" name="comment" placeholder="Your comment" rows="4" required></textarea>
      </div>
      <div class="mb-4">
        <button
          class="bg-gray-800 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit">Submit</button>
      </div>
    </form>
  </div>
  <!-- Newsletter Sign Up-->
  <div class="bg-gray-200 py-8 flex place-content-center justify-center items-center">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-bold mb-4">Sign up for our newsletter</h2>
      <form action="#" method="POST" class="flex flex-col sm:flex-row">
        <input type="email" name="email" placeholder="Enter your email"
          class="px-4 py-2 mb-4 sm:mb-0 w-full sm:w-2/3 rounded-l-md">
        <button type="submit"
          class="px-4 py-2 bg-gray-800 text-white rounded-r-md hover:bg-gray-700 transition-colors duration-300">Sign
          up</button>
      </form>
    </div>
  </div>
    <!-- Comments container -->
  <div id="comments-container" class="mt-4">

    <!-- Existing comments will be displayed here -->
  </div>
</div>